{
  "name": "library-api",
  "version": "1.0.0",
  "description": "Library RESTful API",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec 'node -r ts-node/register --inspect-brk' server/index.ts | pino-pretty",
    "lint": "tsc --noEmit && eslint -c .eslintrc.js '{server, test}/*.{js,ts,tsx}' --quiet",
    "lint:fix": "tsc --noEmit && eslint -c .eslintrc.js '{server, test}/*.{js,ts,tsx}' --quiet --fix",
    "test": "mocha test/**/*.ts --exit",
    "test:debug": "mocha --inspect-brk test/**/*.ts --exit",
    "build": "npm run compile",
    "build:image": "npm run build && docker build . -t sbracegirdle/library-api",
    "push": "docker push sbracegirdle/library-api"
  },
  "dependencies": {
    "@types/joi": "^14.3.4",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^3.6.6",
    "joi": "^14.3.1",
    "pino": "^5.13.6"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/pino": "^5.8.13",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^10.2.0",
    "nodemon": "^1.19.4",
    "pino-pretty": "^3.3.0",
    "prettier": "^1.19.1",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "author": "Simon Bracegirdle <sbracegirdle@gmail.com> (https://github.com/sbracegirdle)"
}
